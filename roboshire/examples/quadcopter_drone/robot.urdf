<?xml version="1.0"?>
<robot name="quadcopter_drone">

  <!-- Main Body Frame -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.25 0.10"/>
      </geometry>
      <material name="body_color">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.25 0.10"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.0104" ixy="0.0" ixz="0.0"
               iyy="0.0104" iyz="0.0"
               izz="0.0208"/>
    </inertial>
  </link>

  <!-- IMU Sensor Link -->
  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.01"/>
      </geometry>
      <material name="sensor_color">
        <color rgba="0.8 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
               iyy="0.00001" iyz="0.0"
               izz="0.00001"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- GPS Sensor Link -->
  <link name="gps_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.02"/>
      </geometry>
      <material name="gps_color">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
               iyy="0.00001" iyz="0.0"
               izz="0.00001"/>
    </inertial>
  </link>

  <joint name="gps_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gps_link"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
  </joint>

  <!-- ROTOR 1: Front-Left (X-configuration, 45 degrees) -->
  <link name="rotor_1_link">
    <visual>
      <!-- Motor housing -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
      <material name="motor_color">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <visual>
      <!-- Propeller -->
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.127" length="0.005"/>
      </geometry>
      <material name="prop_color">
        <color rgba="0.9 0.9 0.9 0.8"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <mass value="0.12"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.0001" iyz="0.0"
               izz="0.0002"/>
    </inertial>
  </link>

  <joint name="rotor_1_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_1_link"/>
    <origin xyz="0.177 0.177 0.05" rpy="0 0 0.785"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.001"/>
    <limit effort="10.0" velocity="1000.0"/>
  </joint>

  <!-- ROTOR 2: Front-Right (X-configuration, -45 degrees) -->
  <link name="rotor_2_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
      <material name="motor_color"/>
    </visual>
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.127" length="0.005"/>
      </geometry>
      <material name="prop_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <mass value="0.12"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.0001" iyz="0.0"
               izz="0.0002"/>
    </inertial>
  </link>

  <joint name="rotor_2_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_2_link"/>
    <origin xyz="0.177 -0.177 0.05" rpy="0 0 -0.785"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.001"/>
    <limit effort="10.0" velocity="1000.0"/>
  </joint>

  <!-- ROTOR 3: Rear-Right (X-configuration, -135 degrees) -->
  <link name="rotor_3_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
      <material name="motor_color"/>
    </visual>
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.127" length="0.005"/>
      </geometry>
      <material name="prop_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <mass value="0.12"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.0001" iyz="0.0"
               izz="0.0002"/>
    </inertial>
  </link>

  <joint name="rotor_3_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_3_link"/>
    <origin xyz="-0.177 -0.177 0.05" rpy="0 0 -2.356"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.001"/>
    <limit effort="10.0" velocity="1000.0"/>
  </joint>

  <!-- ROTOR 4: Rear-Left (X-configuration, 135 degrees) -->
  <link name="rotor_4_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
      <material name="motor_color"/>
    </visual>
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.127" length="0.005"/>
      </geometry>
      <material name="prop_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <mass value="0.12"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.0001" iyz="0.0"
               izz="0.0002"/>
    </inertial>
  </link>

  <joint name="rotor_4_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_4_link"/>
    <origin xyz="-0.177 0.177 0.05" rpy="0 0 2.356"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.001"/>
    <limit effort="10.0" velocity="1000.0"/>
  </joint>

  <!-- Camera Link (Optional for computer vision) -->
  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.015"/>
      </geometry>
      <material name="camera_color">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.015"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
               iyy="0.00001" iyz="0.0"
               izz="0.00001"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.13 0 0" rpy="0 0 0"/>
  </joint>

