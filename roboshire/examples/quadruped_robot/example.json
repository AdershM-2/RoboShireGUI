{
  "id": "quadruped_robot",
  "name": "Quadruped Robot (Spot-like)",
  "version": "1.0.0",
  "author": "RobotStudio Team",
  "description": "A four-legged robot inspired by Boston Dynamics' Spot. Features 12 degrees of freedom (3 per leg) with realistic proportions and mass distribution. Perfect for learning about legged locomotion, gait planning, and dynamic balance control.",
  "category": "Legged Robotics",
  "difficulty": "intermediate",
  "license": "MIT",
  "tags": [
    "quadruped",
    "legged-robot",
    "locomotion",
    "dynamic",
    "spot",
    "four-legged",
    "walking"
  ],
  "features": [
    "12 actuated joints (3 per leg: hip, shoulder, knee)",
    "Realistic mass distribution (25kg total)",
    "4 legs with proper kinematics",
    "Center body with IMU mounting point",
    "Lifecycle node controllers for each leg",
    "Gait generation example included"
  ],
  "requirements": {
    "ros2_packages": [
      "ros2_control",
      "controller_manager",
      "joint_state_broadcaster",
      "joint_trajectory_controller"
    ],
    "optional_packages": [
      "gazebo_ros2_control",
      "ros2_controllers"
    ]
  },
  "use_cases": [
    "Terrain navigation research",
    "Gait planning algorithms (trot, walk, gallop)",
    "Dynamic balance and stability control",
    "Search and rescue simulation",
    "Rough terrain mobility",
    "Legged robotics education"
  ],
  "ros2_compatibility": "Humble, Iron, Rolling",
  "complexity": {
    "links": 17,
    "joints": 12,
    "dof": 12,
    "total_mass_kg": 25.0
  },
  "files": {
    "urdf": "robot.urdf",
    "node_graph": "node_graph.json",
    "preview": "preview.png",
    "readme": "README.md"
  }
}
