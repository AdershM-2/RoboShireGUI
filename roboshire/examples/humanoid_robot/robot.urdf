      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.15"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.018" ixy="0.0" ixz="0.0"
               iyy="0.023" iyz="0.0"
               izz="0.027"/>
    </inertial>
  </link>

