    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.15"/>
      </geometry>
      <material name="pelvis_color">
        <color rgba="0.7 0.7 0.7 1.0"/>
