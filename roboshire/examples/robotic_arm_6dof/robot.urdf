<?xml version="1.0"?>
<!-- Simple 6-DOF Robotic Arm URDF -->
<robot name="robotic_arm_6dof">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joint 1: Base Rotation -->
  <link name="link1">
    <visual>
      <geometry>
        <box size="0.06 0.06 0.15"/>
      </geometry>
      <origin xyz="0 0 0.075"/>
      <material name="blue">
        <color rgba="0.2 0.3 0.8 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.0"/>
  </joint>

  <!-- Joint 2: Shoulder -->
  <link name="link2">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
      <origin xyz="0 0 0.125"/>
      <material name="orange">
        <color rgba="0.9 0.5 0.2 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.8"/>
      <inertia ixx="0.008" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.008"/>
    </inertial>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="80" velocity="1.0"/>
  </joint>

  <!-- Joint 3: Elbow -->
  <link name="link3">
    <visual>
      <geometry>
        <box size="0.045 0.045 0.25"/>
      </geometry>
      <origin xyz="0 0 0.125"/>
      <material name="green">
        <color rgba="0.2 0.8 0.3 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.6"/>
      <inertia ixx="0.006" ixy="0" ixz="0" iyy="0.006" iyz="0" izz="0.006"/>
    </inertial>
  </link>

  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="60" velocity="1.0"/>
  </joint>

  <!-- Joint 4: Wrist Roll -->
  <link name="link4">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.12"/>
      </geometry>
      <origin xyz="0 0 0.06"/>
      <material name="yellow">
        <color rgba="0.9 0.9 0.2 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
    </inertial>
  </link>

  <joint name="joint4" type="revolute">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="40" velocity="1.5"/>
  </joint>

  <!-- Joint 5: Wrist Pitch -->
  <link name="link5">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.08"/>
      </geometry>
      <origin xyz="0 0 0.04"/>
      <material name="purple">
        <color rgba="0.7 0.2 0.7 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
    </inertial>
  </link>

  <joint name="joint5" type="revolute">
    <parent link="link4"/>
    <child link="link5"/>
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="30" velocity="1.5"/>
  </joint>

  <!-- Joint 6: Wrist Roll -->
  <link name="link6">
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0.02"/>
      <material name="cyan">
        <color rgba="0.2 0.8 0.8 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="joint6" type="revolute">
    <parent link="link5"/>
    <child link="link6"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="20" velocity="2.0"/>
  </joint>

  <!-- End Effector / Gripper -->
  <link name="ee_link">
    <visual>
      <geometry>
        <box size="0.03 0.05 0.02"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <joint name="ee_joint" type="fixed">
    <parent link="link6"/>
    <child link="ee_link"/>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
  </joint>

</robot>
